@model WebAPP.MVC.Lab01.Models.ContatoViewModel

@{
    ViewBag.Title = "Contato";
}

<h2>Contato</h2>

@if (ViewBag.Concluido)
{
    <div class="alert alert-success">Sua mensagem foi enviada. Obrigada pelo seu contato.</div>
}
else
{
    <p>Por favor, preencha o formulário para entrar em contato comigo:</p>
    <hr />
    <form method="post">
        <div class="form-group">
            <label for="Nome" class="control-label">Nome:</label>
            <input type="text" id="Nome" name="Nome"
                   class="form-control" />
        </div>
        <div class="form-group">
            <label for="Email" class="control-label">Email:</label>
            <input type="text" id="Email" name="Email"
                   class="form-control" />
        </div>
        <div class="form-group">
            <label for="Mensagem" class="control-label">Mensagem:</label>
            <input type="text" id="Mensagem" name="Mensagem"
                   ] class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default"
                   value="Enviar" />
        </div>
    </form>
}

